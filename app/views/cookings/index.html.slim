.background-co
  = render partial: 'modal'
  = render partial: 'shared/cooking_title'
  .container
    .row.form-inline
      - @cookings.each do | cooking |
        .col-xs-6.col-sm-3
          - if cooking.cooking_category.classification_name == t('Craftsmanship')
            - break
            / 匠の技（食品サンプル展）を分けるための仮処置：一覧には非表示にする
          = link_to cooking
            .card
              .ribbon.ribbon-top-right
                - if cooking.cooking_category.classification_name == t('cafe_and_sweets')
                  span = t('sweets')
                  / 文字数がリボン内に収まらないので短縮
                - else
                  span = cooking.cooking_category.classification_name
              .card-top
                .card-title
                  = cooking.cooking_name
              .img-body-co
                .card-img-top
                  = image_tag cooking.image if cooking.image.attached?
  = render partial: 'cooking_categories/cooking_category_list'
