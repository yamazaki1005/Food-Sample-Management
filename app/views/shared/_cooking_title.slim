#food-sample-list.container-custom
  ul.cooking-product-switch
    li.switch-item
      = link_to t('cookings'), cookings_path
      .check-cooking.far.fa-check-circle
    li.switch-item
      = link_to t('products'), products_path, class: "is-current"
  h1.mx-auto.title.pt-4
    = t('view_food_samples')
    .nav.justify-content-end
      .row
        = link_to cookings_path, class: 'nav-link btn btn-square-pop link-btn col-sm-6 col-md-5 m-1'
          = t('cooking_list')
          i.far.fa-images
        - if user_signed_in?
          = link_to user_path(@user.id), class: 'nav-link btn btn-square-pop link-btn col-sm-5 col-md-3 m-1'
            - if current_user.id == 1
              = t('guest_posts_list')
            - else
              = t('your_posts_list')
          = link_to new_cooking_path, class: 'nav-link btn btn-square-pop link-btn post-btn col-sm-12 col-md-3 m-1'
            = t('new_registration', v: t('cookings'))
