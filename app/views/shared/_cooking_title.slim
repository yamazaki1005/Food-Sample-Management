#food-sample-list.container-custom
  ul.cooking-product-switch
    li.switch-item
      = link_to t('cookings'), cookings_path
    li.switch-item
      = link_to t('products'), products_path, class: "is-current"
  h1.mx-auto.title.pt-4
    = t('view_food_samples')
    .nav.justify-content-end
      = link_to cookings_path, class: 'nav-link btn margin-custom link-btn'
        = t('cooking_list')
      - if user_signed_in?
        = link_to user_path(@user.id), class: 'nav-link btn margin-custom link-btn'
          - if current_user.id == 1
            = t('guest_posts_list')
          - else
            = t('your_posts_list')
        = link_to new_cooking_path, class: 'nav-link btn margin-custom link-btn'
          = t('new_registration', v: t('cookings'))
